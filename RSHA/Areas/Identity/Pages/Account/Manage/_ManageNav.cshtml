    <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-page="./Index">Profile</a></li>
    @if (User.IsInRole(StaticDetails.MechanicEndUser))
    {
    <li class="@ManageNavPages.WorkshopNavClass(ViewContext)"><a asp-page="./Workshop">Workshop</a></li>
    }
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a id="change-password" asp-page="./ChangePassword">Password Reset</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a id="external-login" asp-page="./ExternalLogins">External logins</a></li>
    }
